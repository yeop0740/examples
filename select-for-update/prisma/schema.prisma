generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id            Int             @id @default(autoincrement())
  type          Int
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")
  accountDetail AccountDetail[]

  @@map("account")
}

model AccountDetail {
  id           Int      @id @default(autoincrement())
  prevBalance  Int      @map("prev_balance")
  changeAmount Int      @map("change_amount")
  newBalance   Int      @map("new_balance")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  accountId           Int            @map("account_id")
  account             Account        @relation(fields: [accountId], references: [id])
  prevAccountDetailId Int?           @unique @map("prev_account_detail_id")
  prevAccountDetail   AccountDetail? @relation("linkedAccountDetailList", fields: [prevAccountDetailId], references: [id])
  nextAccountDetail   AccountDetail? @relation("linkedAccountDetailList")

  @@map("account_detail")
}
