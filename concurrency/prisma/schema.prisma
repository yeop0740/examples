generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique @db.VarChar(255)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Account {
  id            Int             @id @default(autoincrement())
  type          Int
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")
  accountDetail AccountDetail[]

  @@map("account")
}

model AccountDetail {
  id           Int      @id @default(autoincrement())
  prevBalance  Int
  changeAmount Int
  newBalance   Int
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  accountId           Int
  account             Account        @relation(fields: [accountId], references: [id])
  prevAccountDetailId Int?           @unique
  prevAccountDetail   AccountDetail? @relation("linkedAccountDetailList", fields: [prevAccountDetailId], references: [id])
  nextAccountDetail   AccountDetail? @relation("linkedAccountDetailList")

  @@map("account_detail")
}
